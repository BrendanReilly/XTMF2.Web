@page "/project/{ProjectName}"
@namespace XTMF2.Web.Pages

<BasePage ShowSideNav="false">
    <Content>
        @if (Project != null)
        {
            <div>The project was loaded successfully.</div>
        }
        else
        {
            <BSAlert Color="Color.Danger">
                The project was not loaded or could not be found.
            </BSAlert>
        }

        <table class="table table-hover">
            <thead>
            <tr>
                <th>Model System</th>
                <th>Description</th>
            </tr>
            </thead>
            <tbody>
            @foreach (var modelSystem in ModelSystems)
            {
                <tr>
                    <td>
                        <NavLink class="nav-link" href=@($"/ModelSystem/{Project.Name}/{modelSystem.Name}")>
                            @modelSystem.Name
                        </NavLink>
                    </td>
                    <td>
                        @modelSystem.Description
                    </td>

                </tr>
            }
            </tbody>
        </table>
    </Content>
    <Title>Project - @ProjectName</Title>
</BasePage>

